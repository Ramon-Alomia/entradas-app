# === Flask (desarrollo) ===
FLASK_ENV=development
FLASK_RUN_HOST=127.0.0.1
FLASK_RUN_PORT=5000
SECRET_KEY=REEMPLAZA_EN_.env

# CORS (si usas una UI aparte, agrega su URL)
CORS_ORIGINS=http://127.0.0.1:5000

# === PostgreSQL (Neon) ===
# Formato típico para psycopg v3:
# postgresql://usuario:password@host.neon.tech/nombre_db?sslmode=require
DATABASE_URL=REEMPLAZA_EN_.env

# === SAP Business One Service Layer (usar v2) ===
SERVICE_LAYER_URL=https://TU_SERVIDOR:50000/b1s/v2
COMPANY_DB=REEMPLAZA_EN_.env
SL_USER=REEMPLAZA_EN_.env
SL_PASSWORD=REEMPLAZA_EN_.env

# (Opcional) Llave de bóveda/otros
VAULT_KEY=OPCIONAL
